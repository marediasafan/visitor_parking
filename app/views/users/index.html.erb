<p id="notice"><%= notice %></p>

<h2>List of Users <div class="col text-right"><%= link_to 'Register User', new_user_path, class: "btn btn-primary"  %></div></h2>


<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">First name</th>
      <th scope="col">Username</th>
      <th scope="col">Password</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td scope="row"><%= user.first_name %></td>
        <td scope="row"><%= user.username %></td>
        <td scope="row"><%= user.password %></td>
        <td scope="row"><%= user.email %></td>
        <td scope="row"><%= user.phone %></td>
        <td scope="row">
            <%= link_to 'Show', user, class: "btn btn-info" %>
            <%= link_to 'Edit', edit_user_path(user), class: "btn btn-success" %>
            <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
